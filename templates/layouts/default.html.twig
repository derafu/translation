{# layouts/default.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Derafu: Translation - Translation Library with Exception Support{% endblock %}

{% block body %}
    {% block header %}
        <div id="header-container" class="sticky-top"></div>
    {% endblock %}

    {% block main %}
        <div class="container">
            <div class="row">
                <main class="col-md-9">
                    {% block content %}{% endblock %}
                </main>
                <div class="col-md-3 py-4">
                    <div class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Package Info</div>
                                <span class="smal text-muted">
                                    <a href="https://github.com/derafu/translation" target="_blank" class="link-secondary text-decoration-none">
                                        <i class="fa-brands fa-github"></i>
                                        derafu/translation
                                    </a>
                                </span>
                                <div class="my-2">
                                    <img src="https://img.shields.io/github/stars/derafu/translation" alt="GitHub Repo stars">
                                    <img src="https://img.shields.io/github/forks/derafu/translation" alt="GitHub forks">
                                </div>
                            </div>
                        </li>
                        <a class="list-group-item list-group-item-action {% if request.uri.path == base_path ~ '/' %}active{% endif %}" href="{{ base_path }}/">
                            README
                        </a>
                    </div>
                    <div class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                              <div class="fw-bold">Docs</div>
                              <span class="smal text-muted">Guides & Examples</span>
                            </div>
                        </li>

                        <a class="list-group-item list-group-item-action {% if request.uri.path == base_path ~ '/quick-start' %}active{% endif %}" href="{{ base_path }}/quick-start">
                            Quick Start Guide
                        </a>
                        <a class="list-group-item list-group-item-action {% if request.uri.path == base_path ~ '/api-reference' %}active{% endif %}" href="{{ base_path }}/api-reference">
                            API Reference
                        </a>
                        <a class="list-group-item list-group-item-action {% if request.uri.path == base_path ~ '/exceptions' %}active{% endif %}" href="{{ base_path }}/exceptions">
                            Working with Translatable Exceptions
                        </a>
                        <a class="list-group-item list-group-item-action {% if request.uri.path == base_path ~ '/icu-formatting' %}active{% endif %}" href="{{ base_path }}/icu-formatting">
                            ICU Message Formatting Guide
                        </a>
                        <a class="list-group-item list-group-item-action {% if request.uri.path == base_path ~ '/custom-providers' %}active{% endif %}" href="{{ base_path }}/custom-providers">
                            Creating Custom Message Providers
                        </a>
                        <a class="list-group-item list-group-item-action {% if request.uri.path == base_path ~ '/advanced-usage' %}active{% endif %}" href="{{ base_path }}/advanced-usage">
                            Advanced Usage Guide
                        </a>
                        <a class="list-group-item list-group-item-action {% if request.uri.path == base_path ~ '/real-world' %}active{% endif %}" href="{{ base_path }}/real-world">
                            Real World Examples
                        </a>
                        <a class="list-group-item list-group-item-action {% if request.uri.path == base_path ~ '/symfony-integration' %}active{% endif %}" href="{{ base_path }}/symfony-integration">
                            Symfony Integration Guide
                        </a>
                        <a class="list-group-item list-group-item-action {% if request.uri.path == base_path ~ '/testing' %}active{% endif %}" href="{{ base_path }}/testing">
                            Testing Guide
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block footer %}
        <div id="footer-container"></div>
        <script src="https://derafu.org/js/derafu.js"></script>
    {% endblock %}
{% endblock %}
